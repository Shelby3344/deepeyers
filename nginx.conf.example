# ============================================
# DEEPEYES NGINX SECURITY CONFIGURATION
# Copy to: /etc/nginx/sites-available/deepeyes
# ============================================

server {
    listen 80;
    server_name deepeyes.online www.deepeyes.online;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name deepeyes.online www.deepeyes.online;
    
    root /var/www/deepeyes/public;
    index index.php;
    
    # SSL Configuration
    ssl_certificate /etc/letsencrypt/live/deepeyes.online/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/deepeyes.online/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 1d;
    ssl_stapling on;
    ssl_stapling_verify on;
    
    # ============================================
    # SECURITY HEADERS
    # ============================================
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Permissions-Policy "geolocation=(), microphone=(), camera=()" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.tailwindcss.com https://cdnjs.cloudflare.com https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com; img-src 'self' data: blob: https:; connect-src 'self' https://deepeyes.online wss://deepeyes.online; frame-ancestors 'self';" always;
    
    # Hide server info
    server_tokens off;
    more_clear_headers Server;
    more_clear_headers X-Powered-By;
    
    # ============================================
    # BLOCK SENSITIVE FILES & DIRECTORIES
    # ============================================
    
    # Block .env and all hidden files
    location ~ /\. {
        deny all;
        return 404;
    }
    
    # Block sensitive files
    location ~* ^/(\.env|\.git|artisan|composer\.(json|lock)|package(-lock)?\.json|phpunit\.xml|webpack\.mix\.js|vite\.config\.js|README\.md|CHANGELOG\.md)$ {
        deny all;
        return 404;
    }
    
    # Block sensitive directories
    location ~* ^/(app|bootstrap|config|database|resources|routes|storage|tests|vendor)/ {
        deny all;
        return 404;
    }
    
    # Block backup and log files
    location ~* \.(bak|backup|old|orig|save|swp|tmp|sql|log|ini|conf|config|env)$ {
        deny all;
        return 404;
    }
    
    # Block PHP files in storage
    location ~* ^/storage/.*\.php$ {
        deny all;
        return 404;
    }
    
    # ============================================
    # RATE LIMITING
    # ============================================
    limit_req_zone $binary_remote_addr zone=api:10m rate=10r/s;
    limit_req_zone $binary_remote_addr zone=login:10m rate=5r/m;
    limit_conn_zone $binary_remote_addr zone=conn:10m;
    
    # Apply rate limiting to API
    location /api/ {
        limit_req zone=api burst=20 nodelay;
        limit_conn conn 10;
        try_files $uri $uri/ /index.php?$query_string;
    }
    
    # Strict rate limiting for auth endpoints
    location ~* ^/api/auth/(login|register) {
        limit_req zone=login burst=3 nodelay;
        try_files $uri $uri/ /index.php?$query_string;
    }
    
    # ============================================
    # MAIN LOCATION
    # ============================================
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }
    
    # PHP Processing
    location ~ \.php$ {
        fastcgi_pass unix:/var/run/php/php8.2-fpm.sock;
        fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
        include fastcgi_params;
        
        # Security
        fastcgi_hide_header X-Powered-By;
        fastcgi_param PHP_VALUE "expose_php=Off";
    }
    
    # Static files caching
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|woff|woff2|ttf|svg)$ {
        expires 30d;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    
    # Deny access to sensitive file types
    location ~* \.(htaccess|htpasswd|ini|log|sh|sql|conf|bak|swp)$ {
        deny all;
        return 404;
    }
    
    # Logging
    access_log /var/log/nginx/deepeyes_access.log;
    error_log /var/log/nginx/deepeyes_error.log;
}
